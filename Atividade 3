# Projetos
escolha_o_zoom = input('Digite o zoom que voce quer:')
mensagem = input('Houve mudança na variável adicionada?  sim ou não:')
print((mensagem=='s' and escolha_o_zoom!=zoom) or (mensagem=='n' and escolha_o_zoom==zoom))
 
escolha_os_feixes = input('Digite o número de feixes que você quer:')
